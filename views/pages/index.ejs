<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body role="document">
    <% include ../partials/header %>
    <div>
        <div class="container">
            <% posts.reverse(); %>
            <% var img = posts[0].title_img; if(img === "") { img = "http://placehold.it/700x520"} %>
            <% var link = "/blog/" + posts[0]._id; %>
            <img  src="<%= img %>" alt="">
            <h1><a href"<%= link %>"><%= posts[0].title %></a></h1>
            <p><%= posts[0].summary %></p>
        </div>  
            <hr>   
            <div class="container" >
            <div class="card-deck">
            <% for(var i=0; i<posts.length; i++) { %>
                <% if(i === 0) { continue; } %>
                <% var link = "/blog/" + posts[i]._id; %>
                <div class="card">
                    <% var img = posts[i].title_img; if(img === "") { img = "http://placehold.it/700x520"} %>
                    <img class="card-img-top" src="<%= img %>" alt="">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="<%= link %>"><%= posts[i].title %></a>
                        </h5>
                        <p class="card-text"><small class="text-muted"><%= posts[i].summary %></small></p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            <% } %>
        </div>
        </div>
    </div>
    
    <footer>
        <% include ../partials/footer %>
    </footer>
    <script src="bootstrap.min.js"></script>
</body>
</html>