<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head %>
</head>

<body role="document">
  <% include ./partials/header %>
    <div class="container">
      <div class="row" style="margin-top: 1.5rem!important;">
        <div class="col-lg-8">
          <% posts.reverse(); %>
            <% var img = posts[0].title_img; if(img === "") { img = "http://placehold.it/700x520"} %>
              <% var link = "/blog/" + posts[0]._id; %>
                <img src="<%= img %>" alt="">
        </div>
        <div class="col-lg-4">
          <h1>
            <%= posts[0].title %>
          </h1>
          <p>
            <%= posts[0].summary %>
          </p>
          <a href="<%= link %>" class="btn btn-outline-primary">Lesen</a>
        </div>
      </div>
      <hr>
      <div class="container">
        <div class="row">
          <% for(var i=1; i<posts.length; i++) { %>
            <% var link = "/blog/" + posts[i]._id; %>
              <!-- <% if((i % 4 === 0) || (i === 1))  { %>
            <hr>
            <div class="card-deck"> 
            <% } %> -->
