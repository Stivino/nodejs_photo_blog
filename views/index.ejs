                                <div class="col-md-6 col-lg-4">
                                    <div class="card border-0 transform-on-hover">
                                        <a class="lightbox" href="<%= link %>">
                                            <img src="<%= img %>" alt="Card Image" class="card-img-top">
                                        </a>
                                        <div class="card-body">
                                            <h6>
                                                <a href="<%= link %>"><%= posts[i].summary %></a>
                                            </h6>
                                            <p class="text-muted card-text"><%= posts[i].summary %></p>
                                        </div>
                                    </div>
                                </div>
-->
              <div class="col-lg-4 col-sm-6 album-thumbnail">
                <div class="shadow-sm card h-100" href="<%= link %>">
                  <% var img = posts[i].title_img; if(img === "") { img = "http://placehold.it/700x520"} %>
                    <a href="<%= link %>">
                      <img class="card-img-top" src="<%= img %>" alt="">
                    </a>
                    <div class="card-body">
                      <a href="<%= link %>">
                        <h5 class="card-title text-center">
                          <%= posts[i].title %>
                            </h5>
                      </a>
                      <p class="card-text text-center">
                        <small class="text-muted">
                          <%= posts[i].summary %>
                        </small>
                      </p>
                      <div class="text-center ">
                        <a href="<%= link %>" class="btn text-center btn-outline-primary">Lesen</a>
                      </div>

                    </div>
                    <div class="card-footer text-center text-muted">
                      <p>
                        <%= dateformat(posts[i].created, "d. mmmm yyyy"); %>
                      </p>
                    </div>
                </div>
              </div>
              <!-- <% if(i % 3 === 0 || i === posts.length - 1) { %>
            </div>
            <%    } %> -->
              <% } %>
        </div>
      </div>
    </div>
    <footer>
      <% include ./partials/footer %>
    </footer>
    <script src="javascripts/bootstrap.min.js"></script>
</body>

</html>